#toggle workspace 
workspace_auto_back_and_forth yes
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

set $monitor_mode_system w.r.t HDMI (r) Right, (l) Left, (t) Top, (b) Bottom, (d) Duplicate, (o) Off
mode "$monitor_mode_system" {
        bindsym o exec xrandr --output "$m1" --off, mode "default"
        bindsym t exec xrandr --output "$m1" --auto --top "$m2", mode "default"
        bindsym b exec xrandr --output "$m1" --auto --below "$m2" , mode "default"
        bindsym r exec xrandr --output "$m1" --auto --right-of "$m2" , mode "default"
        bindsym l exec xrandr --output "$m1" --auto --left-of "$m2" , mode "default"
        bindsym d exec xrandr --output "$m1" --auto --same-as "$m2" , mode "default"

        bindsym Escape mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}

bindsym $mod+m mode "$monitor_mode_system"
# duplicate display
bindsym $mod+Shift+m exec --no-startup-id xrandr --output "eDP-1" --auto --same-as "HDMI-1"


bindsym XF86MonBrightnessDown exec --no-startup-id ~/.local/bin/scripts/changebrightness down 
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.local/bin/scripts/changebrightness up 

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause
